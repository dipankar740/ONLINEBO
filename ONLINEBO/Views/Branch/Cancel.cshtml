@{
    ViewBag.Title = "Cancel_SSL";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


@model Dictionary<string, string>

<article class="message is-info">
    <div class="message-header">
        <p>Transaction has been cancelled by the user! <a href="/">Return to home</a>.</p>
    </div>
    <div class="message-body">
        @foreach (var prop in Model)
        {
            using (StreamWriter writer = new StreamWriter(Server.MapPath("/logs/SSL_transactions.txt"), true))
            {
                writer.WriteLine(prop.Key + ": " + prop.Value);
            }
            <code>@prop.Key: @prop.Value</code>
            <br>
        }
    </div>
</article>
